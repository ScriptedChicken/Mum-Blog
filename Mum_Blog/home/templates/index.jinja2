{% extends "base.jinja2" %}

{% block pagestyles %}
    {% assets "home_style_bundle" %}
        <link href="{{ ASSET_URL }}" rel="stylesheet" type="text/css">
    {% endassets %}
{% endblock %}

{% block content %}
    {% include "navigation.jinja2" %}

    <div id="quoteCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {% for quote in quotes %}
                <div class="carousel-item{% if loop.first %} active{% endif %}">
                <div>
                <figure class="text-center">
                        <blockquote class="blockquote"><p>{{ quote.content }}</p></blockquote>
                        <figcaption class="blockquote-footer">
                            Mum in <cite title="{{ quote.title }}">{{ quote.title }}</cite>
                        </figcaption>
                    </figure>
                </div>
                    
                </div>
            {% endfor %}
        </div>
    </div>

    <div>    
        <div class="posts">
            {% for post in posts %}
            <div class="container">
                <div class="row">
                    <div class="col-9">
                        <h3>{{ post.title }}</h3>
                        <div class="post-preview">{{ post.content }}</div>
                    </div>
                    <div class="col-3">
                        <img src="{{ post.profile.image }}" alt="Profile image of {{ post.profile.username }}." width="50" height="50">
                        <div>{{ post.profile.username }}</div>
                    </div>
                </div>
            </div>
                
                <br>
            {% endfor %}
        </div>
    </div>
{% endblock %}